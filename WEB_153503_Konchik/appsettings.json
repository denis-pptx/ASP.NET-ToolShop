{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ItemsPerPage": 3,
  "UriData": {
    "ApiUri": "https://localhost:7002/api/",
    "ISUri": ""
  },
  "InteractiveServiceSettings": {
    "AuthorityUrl": "https://localhost:7003",
    "ClientId": "WEB",
    "ClientSecret": "konchik-secret-key",
    "Scopes": [ "api.read", "api.write", "roles" ]
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
