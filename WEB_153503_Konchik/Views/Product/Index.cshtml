@model ListModel<Tool>

@{
    ViewData["Title"] = "Index";

    var request = ViewContext.HttpContext.Request;
    var returnUrl = request.Path + request.QueryString.ToUriComponent();

    var categories = ViewData["caregories"] as List<Category>;
    var currentCategory = ViewData["currentCategory"] as Category;

    int prev = Model.CurrentPage == 1 ? 1 : Model.CurrentPage - 1;
    int next = Model.CurrentPage == Model.TotalPages ? Model.TotalPages : Model.CurrentPage + 1;
}




<div class="row mt-1">

    <!-- Выбор категории -->
    <div class="col-2">
        <ul class="nav ">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle"
                   data-bs-toggle="dropdown"
                   href="#"
                   role="button"
                   aria-expanded="false">
                    @(currentCategory?.Name ?? "Все")
                </a>

                <ul class="dropdown-menu">
                    <li>
                        <a class="dropdown-item"
                           asp-controller="product"
                           asp-route-category=@null>Все</a>
                    </li>
                    @foreach (var item in categories!)
                    {
                        <li>
                            <a class="dropdown-item"
                               asp-controller="product"
                               asp-route-category="@item.NormalizedName">
                                @item.Name
                            </a>
                        </li>
                    }
                </ul>
            </li>
        </ul>
    </div>
    <!-- Выбор категории - конец -->

    <!-- Вывод карточек -->
    <div class="col-10 row">
        <h1>Строительные инструменты</h1>

        @foreach (var tool in Model.Items)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="@tool.Image" class="card-img-top" alt="@tool.Name">
                    <div class="card-body">
                        <h5 class="card-title">@tool.Name</h5>
                        <p class="card-text">@tool.Description</p>
                        <a asp-controller="Cart" asp-action="Add" asp-route-id="@tool.Id" asp-route-returnurl="@returnUrl"
                           class="btn btn-primary">Добавить в корзину</a>
                    </div>
                </div>
            </div>
        }

        <!-- Пагинация -->
        <Pager current-page="@Model.CurrentPage"
               total-pages="@Model.TotalPages"
               category="@(currentCategory?.NormalizedName)"></Pager>
        <!-- Пагинация - конец -->

    </div>
    <!-- Вывод карточек - конец -->
</div>

